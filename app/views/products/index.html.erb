<h1>Add item to cart:</h1>
<form action="<%= products_add_path %>" method="POST">
    <input type="text" name="product" id="product">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="add to cart" id = "add to cart">
</form>
<h2>Current Cart:</h2>
<% if cart.empty? %>
    <p><i>None</i></p>
<% else %>
    <ul>
        <% cart.each do |cart_item| %>
            <li> <%= cart_item %> </li>
        <% end %>
    </ul>
<% end %>